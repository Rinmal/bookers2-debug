<% if user_signed_in? %>
  <div class="container">
    <div class="row">
      <div class="search_form mt-1 mx-auto" >
        <%= form_with url: search_path, method: :get do |f| %>
          <%= f.text_field :word %>
          <%= f.select :object, options_for_select([['User','User'], [ 'Book','Book']], {selected: 'User'}) %>
          <%= f.select :method, options_for_select([["完全一致",'perfect_match'], ["前方一致", 'forward_match'], ["後方一致", 'behind_match'], ["部分一致", 'part_match']], {selected: 'perfect_match'}) %>
          <%= f.submit "検索",　class:'btn' %>
        <% end %>
      </div>
    </div>
  </div>
<% end %>