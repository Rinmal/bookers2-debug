<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-5">
      <h2>Follow Users</h2>
      <% if @users.empty? %>
        <p>ユーザーはいません</p>
      <% else %>
        <table class="table table-hover">
          <thead>
            <tr>
              <th>image</th>
              <th>name</th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <% @users.each do |user| %>
                <%= link_to user_path(user.id) do %>
                  <td><%= image_tag user.get_profile_image, size: '80x80' %></td>
                  <td><%= user.name %></td>
                <% end %>
              <% end %>
            </tr>
          </tbody>
        </table>
      <% end %>
    </div>
  </div>
</div>
